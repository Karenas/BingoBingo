<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <com.gmself.studio.mg.bingobingo.overall.ui.customView.WeatherAnim_surface_home
        android:id="@+id/overall_home_weather_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/overall_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年4月18日 星期四"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/overall_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市-通州"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/overall_weather_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/overall_wind_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="偏北风 4 级"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/overall_temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气温 17 ～ 24 度"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</merge>